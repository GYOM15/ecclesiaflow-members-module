# =============================================================================
# ECCLESIAFLOW AUTHENTICATION MODULE - VARIABLES D'ENVIRONNEMENT
# =============================================================================
# Copiez ce fichier vers .env et configurez les valeurs selon votre environnement

# =============================================================================
# PROFIL D'ENVIRONNEMENT
# =============================================================================
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# CONFIGURATION BASE DE DONNÉES
# =============================================================================
# MySQL Production
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ecclesiaflow_auth
DB_USERNAME=ecclesiaflow
DB_PASSWORD=your-secure-database-password

# =============================================================================
# CONFIGURATION JWT
# =============================================================================
# Secret JWT - OBLIGATOIRE en production (minimum 256 bits)
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-for-production-security
# Durée de vie du token en millisecondes (86400000 = 24 heures)
JWT_EXPIRATION=86400000

# =============================================================================
# CONFIGURATION ADMINISTRATEUR
# =============================================================================
# Compte administrateur par défaut
ADMIN_EMAIL=admin@ecclesiaflow.com
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=EcclesiaFlow

# =============================================================================
# CONFIGURATION SÉCURITÉ
# =============================================================================
# CORS - Origines autorisées (séparées par des virgules)
CORS_ALLOWED_ORIGINS=https://app.ecclesiaflow.com,https://admin.ecclesiaflow.com

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=your-keystore-password

# =============================================================================
# CONFIGURATION CACHE (OPTIONNEL)
# =============================================================================
# Type de cache (simple, redis)
CACHE_TYPE=simple
# Configuration Redis (si CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# CONFIGURATION LOGGING
# =============================================================================
# Niveau de log pour l'application
LOGGING_LEVEL_ECCLESIAFLOW=INFO
# Niveau de log pour Spring Security
LOGGING_LEVEL_SECURITY=WARN

# =============================================================================
# CONFIGURATION MONITORING
# =============================================================================
# Port pour les endpoints de monitoring (Actuator)
MANAGEMENT_SERVER_PORT=8081
# Endpoints exposés (séparés par des virgules)
MANAGEMENT_ENDPOINTS=health,info,metrics

# =============================================================================
# CONFIGURATION RATE LIMITING
# =============================================================================
# Activer/désactiver le rate limiting
RATE_LIMIT_ENABLED=true
# Nombre de requêtes par minute
RATE_LIMIT_REQUESTS_PER_MINUTE=60
# Capacité de burst
RATE_LIMIT_BURST_CAPACITY=100

# =============================================================================
# CONFIGURATION DÉVELOPPEMENT (Profil dev uniquement)
# =============================================================================
# Console H2 (dev seulement)
H2_CONSOLE_ENABLED=true
# Affichage des requêtes SQL (dev seulement)
JPA_SHOW_SQL=true

# =============================================================================
# NOTES IMPORTANTES
# =============================================================================
# 1. Ne JAMAIS committer le fichier .env avec de vraies valeurs
# 2. Utiliser des secrets forts en production (JWT_SECRET, mots de passe)
# 3. Configurer SSL/TLS en production (SSL_ENABLED=true)
# 4. Restreindre CORS_ALLOWED_ORIGINS en production
# 5. Utiliser un cache Redis en production pour de meilleures performances
